
context IncBook {

    constraint NumberOfCopiesValid {
        check: self.copies > -1
    }

    constraint NumberOfBorrowersValid {
        check: self.copies >= self.borrowers.size
        message : "Only " + self.copies + " of " + self.`title` + " available. " + self.borrowers.size + " have been lent out."
    }
}