import '../EcoreHelper.eol';

/**
 * Create Java artifacts related to the EVL Trace Ecore metamodel. 
 *  - An ITraceModel implementaiton that exploits the metamodel information (Ecore2TraceModel.egl)
 *  - A defintion of a java interface for each EClass
 *  - An implementaiton of each EClass that delegates to TinkerPop Gremlin calls to resolve
 *      references. 
 */
pre {
    var now  = Native("java.time.LocalDate").now();
    var path_prefix = "../../../../../../../../../org.eclipse.epsilon.evl.engine.incremental/src-gen/org/eclipse/epsilon/evl/incremental/";
}

rule EPackage2Model
  transform p : EPackage {
  
  parameters {
    var params : new Map;
    params.put("today", now.toString());
    params.put("year", now.getYear().toString()); 
    params.put("qp", "org.eclipse.epsilon.evl.incremental");
    return params;
  }
  
  guard: p.name <> "eol"
  template : "Ecore2EvlTraceModel.egl"
  target : path_prefix + "models/Abstract" + p.getName().firstToUpperCase() + "TraceModel.java"
  
}

rule EClass2Interface
  transform ec : EClass {
  
    parameters {
      var params : new Map;
      params.put("today", now.toString());
      params.put("year", now.getYear().toString()); 
      params.put("qp", "org.eclipse.epsilon.incremental.trace");
      params.put("pName", ec.getEPackage().name);
      return params;
    }
    guard : ec.getEPackage().name == "evl"
    template : "../EClass2Interface.egl"
    target : "../../../../../../../../../org.eclipse.epsilon.evl.engine.incremental" +
             "/src-gen/org/eclipse/epsilon/incremental/trace/" + ec.getEPackage().name  + "/" + ec.name + ".java"
  }


rule EClass2GremlinImple
  transform ec : EClass {
  
    parameters {
      var params : new Map;
      params.put("today", now.toString());
      params.put("year", now.getYear().toString()); 
      params.put("qp", "org.eclipse.epsilon.evl.incremental.trace");
      return params;
    }
    guard : not ec.isInterface() and not ec.isAbstract() and (ec.getEPackage().name == "evl")
    template : "Eclass2EvlGremlinImpl.egl"
    target : "../../../../../../../../../org.eclipse.epsilon.evl.engine.incremental.tinkerpop" +
             "/src-gen/org/eclipse/epsilon/evl/incremental/trace/tinkerpop/Abstract" + ec.name + "Impl.java"
  }


post {
 "GenDone".println();
}